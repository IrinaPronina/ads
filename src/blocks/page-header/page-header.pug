//- Все примеси в этом файле должны начинаться c имени блока (page-header)

mixin page-header(mods)

  //- Принимает:
  //-   mods  {string} - список модификаторов
  //- Вызов:
    +page-header()
      p «Шапка»
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' page-header--' + modsList[i].trim();
      }
    }

  header.page-header(class=allMods, role='banner')&attributes(attributes)
    .page-header__inner.container
      .page-header__top 
        .page-header__left 
          a.page-header__logo(href="/") 
            img(src='img/logo.svg' alt='Логотип' width="320" height="50")
        .page-header__menu.menu 
          .menu__burger 
            .menu__icon
              span 
            .menu__text Меню
          nav.menu__body 
            .menu__top 
              .menu__top-left 
                .menu__text Меню
              .menu__top-middle 
                a(href="javascript:void(0)").page-header__lang-btn ENG
              .menu__top-close
                button.menu__mob-close 
                  svg(width='20' height='20' viewBox='0 0 20 20' fill='none' xmlns='http://www.w3.org/2000/svg')
                    rect(x='0.454102' y='17.4246' width='24' height='3' rx='1.5' transform='rotate(-45 0.454102 17.4246)' fill='black')
                    rect(width='24' height='3' rx='1.5' transform='matrix(-0.707107 -0.707107 -0.707107 0.707107 19.5459 17.4246)' fill='black')
            ul.menu__list 
              li.menu__item.has-child
                a(href="javascript:void(0)").menu__link.h4 Кто мы
                ul.menu__sublist 
                  li.menu__subitem 
                    a(href="javascript:void(0)").menu__sublink.h5 Новости и публикации
                  li.menu__subitem 
                    a(href="javascript:void(0)").menu__sublink.h5 Корпоративная ответственность
                  li.menu__subitem 
                    a(href="javascript:void(0)").menu__sublink.h5 Проекты
              li.menu__item.has-child
